import hudson.model.*
import hudson.EnvVars
import groovy.json.JsonSlurperClassic
import groovy.json.JsonBuilder
import groovy.json.JsonOutput
import groovy.json.*
import java.net.URL

@Library('my-tf-library') _

pipeline {
  agent any
  stages {
    stage('Load Libraries') {
      steps {
        echo 'Hello from Jenkins shared library'
      }
    }
    stage('Code Checkout') {
      steps {
        script {
          codeCheckout()
        }
      }
    }
    stage('TF Init') {
      steps {
        script {
          initTerraform()
        }
      }
    }
    stage('TF Validate') {
      steps {
        script {
          validateTerraform()
        }
      }
    }
    stage('TF Plan') {
      steps {
        script {
          planTerraform()
        }
      }
    }
    stage('TF Apply') {
      steps {
        script {
          applyTerraform()
        }
      }
    }
  }
}
